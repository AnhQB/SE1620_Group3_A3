@model IEnumerable<SE1620_GROUP3_ASS3.Models.Booking>
@inject IHttpContextAccessor HttpContextAccessor;
@using Microsoft.AspNetCore.Http;
    @{
        ViewData["Title"] = "Index";
    }

    <h1>Index</h1>

    <h5>Seats status</h5>
    @{
        bool[] arr = ViewBag.seatsStatus;
        for (var n = 0; n < 10; n++)
        {
            //int n = 0;
            for (var m = 0; m < 10; m++)
            {
                int index = n * 10 + m;
                @if (arr[index] == true)
                {
                    <input type="checkbox" checked onclick="return false;" />
                }
                else
                {
                    <input type="checkbox" onclick="return false;"/>
                }

            }
            <br />
        }
    }






    <p>
        <a asp-action="Create" asp-route-id="@ViewBag.showid" >Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
